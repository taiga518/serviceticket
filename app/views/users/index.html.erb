<%= link_to "create new user", new_user_path %>
<%= link_to "login", login_path %>


<ul>
  <% @users.each do |user| %>
    <li>
        <%= link_to user.name, user_path(user.id) %>
        <%= link_to "[edit]", edit_item_path(user.id) %>
        <%= link_to "[x]", item_path(user.id), 
        method: :delete, data: {confirm: "sure?"} %>
    </li>
  <% end %>
</ul>
