<div class="comment bg-danger">
  <p>コメント</p>
  <% if @item.comments.any? %>
    <% @item.comments.each do |comment|%>
      <%= comment.about %>
      <%= link_to "[x]", item_comment_path(@item.id,comment.id), 
      method: :delete, data: {confirm: "sure?"} %>
  
    <%end%>
  <%end%>
  
  <%= form_for([@item, @item.comments.build]) do |f| %>
   <%= f.text_field :about %>
   <p>
     <%= f.submit "コメント送信" %>
   </p>
 </div>
 
<% end %>