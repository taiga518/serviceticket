<%= form_for @item do |f| %>
  
  <div class="row">
    <div class="col-md-6">
  <h3>レストランの名前</h3>
  <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-md-6">
  <h3>住所</h3>
  <%= f.text_field :location, class: "form-control"  %>
    </div>
  </div>  
  <div class="row">
    <div  class="col-md-6">
  <h3>レストランの詳細</h3>
  <%= f.text_area :body, placeholder: "例）おすすめの料理、雰囲気など", class: "form-control "  %>
    </div>
    <div class="col-md-6">
  <h3>平均的な使用金額</h3>
  <%= f.select :price, [["$(~1000)", 1], ["$$(~2000)",2], ["$$$(~5000)",3], ["$$$$(~10000)",4], ["$$$$$(10000~)",5]] ,{},{class:"form-control"} %>
  </br>
  
  <h3>画像</h3>
  <%= f.file_field :image %>
  </div>
  </div>

<br><hr><hr>
  <%= f.submit :class =>  "btn btn-primary position-button" %>
<% end %>

